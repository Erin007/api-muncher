<div class= "home-container" class="row">

    <h1>Recipe Wrangler</h1>

    <div class="search-box">
      <%= form_tag("/", method: "get") do %>
        <%= text_field_tag(:q) %>
        <%= submit_tag("search") %>
      <% end %>
    </div>


  <div class = "recipe-list">
    <% if !params[:q].blank? %>
    <ul>
      <%@recipes.each do |recipe|%>
        <li><%=link_to(recipe.label, show_one_path(recipe.uri))%></li>
        <%end%>
    </ul>
      <p><%= paginate @recipes%></p>
    <%end%>
  </div>

</div>
