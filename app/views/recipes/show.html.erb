  <div class="show-one" class="column">

      <h2><%=@recipe.label%></h2>
      <h4 class="home-link"><%=link_to("Home", root_path)%></h4>

      <h5><%= link_to("More Details", @recipe.url)%></h5>
      <image><%= image_tag(@recipe.image)%></image>

      <ul class= "ingredients">
        <h6>Serves: <%=@recipe.yield%></h6>
        <%@recipe.ingredients.each do |i|%>
        <li><h5><%=i%></h5></li>
        <% end %>
      </ul>

      <div class = "health-labels">
        <ul>
          <%@recipe.diet_labels.each do |dl|%>
          <li><%=dl%></li>
          <li>●</li>
          <% end %>
          <%@recipe.health_labels.each do |hl|%>
          <li><%=hl%></li>
          <li>●</li>
          <% end %>
        </ul>
      </div>

  </div>
